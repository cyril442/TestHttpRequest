<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:card_view="http://schemas.android.com/tools"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_height="300dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:padding="10dp"
                android:src="@drawable/ic_launcher_background"/>

        <TextView
                android:id="@+id/titleTxt"
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="5dp"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/imageView"
                android:layout_alignParentLeft="true"
                />

        <TextView
        android:id="@+id/sectionTxt"
        android:text="section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:padding="5dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/titleTxt"
        android:layout_alignParentLeft="true"
/>
    <TextView
            android:id="@+id/subsectionTxt"
            android:text="subsection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:padding="2dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic"
            android:layout_below="@+id/sectionTxt"
            android:layout_alignParentLeft="true"
    />
        <TextView
                android:id="@+id/urlArticleTxt"
                android:text="url article "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="5dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="italic"
                android:layout_below="@+id/subsectionTxt"
                android:layout_alignParentLeft="true"
        />

        <TextView
                android:id="@+id/dateTxt"
                android:text="date "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="5dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="italic"
                android:layout_below="@+id/urlArticleTxt"
                android:layout_alignParentLeft="true"
        />
        <TextView
                android:id="@+id/resultsTxt"
                android:text="results"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:padding="5dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="italic"
                android:layout_below="@+id/dateTxt"
                android:layout_alignParentLeft="true"
        />





    </RelativeLayout>

</android.support.v7.widget.CardView>